{
  "version": 10,
  "configurePresets": [
    {
      "name": "base-debug",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "debug-clang",
      "inherits": "base-debug",
      "displayName": "Debug (Clang)",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror -Wpedantic -Wconversion -O2 -g"
      }
    }
  ]
}